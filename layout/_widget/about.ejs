<div class="widget-wrap">
    <h3 class="widget-title">About</h3>
    <div class="widget about">
        <ul>
            <li><strong><%= config.author %></strong>
                <% if (config.twitter_id) { %>
                    (@<a href="http://www.twitter.com/<%- config.twitter_id %>"><%- config.twitter_id %></a>)
                <% } %>
            </li>
            <% if (config.about_desc) { %>
                <li><%- config.about_desc %></li>
            <% } %>
        </ul>
    </div>
</div>
